@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <div class="card-header">Trabajadores</div>
            <div class="card-body">
                
                <div class="text-end">
                    <button class="btn btn-success" id="btnNuevo">Nuevo Trabajador</button>
                </div>                
                <div class="mb-2">
                    <label>Sexo</label>
                    <select class="form-select input-sm" name="cboSexoFiltro" id="cboSexoFiltro"></select>
                </div>

                <hr />

                <table class="table table-striped" id="tbContacto" >
                    <thead>
                        <tr>
                            <th>Tipo Documento</th>
                            <th>Nro Documento</th>
                            <th>Nombres</th>
                            <th>Sexo</th>
                            <th>Depatarmento</th>
                            <th>Provincia</th>
                            <th>Distrito</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>
        </div>
        <!--Fin tarjeta-->

    </div>
</div>



<!--Inicio Modal-->
<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Datos Trabajador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtId" value="0" />
                <div class="mb-2">
                    <label>Tipo Documento</label>
                    <select class="form-select input-sm" name="cboTipoDocumento" id="cboTipoDocumento"></select>
                </div>
                <div class="mb-2">
                    <label>Nro Documento</label>
                    <input type="text" class="form-control" id="txtNroDocumento" name="txtNroDocumento" />
                </div>
                <div class="mb-2">
                    <label>Nombres</label>
                    <input type="text" class="form-control" id="txtNombres" name="txtNombres" />
                </div>
                <div class="mb-2">
                    <label>Sexo</label>
                    <select class="form-select input-sm" name="cboSexo" id="cboSexo"></select>
                </div>
                <div class="mb-2">
                    <label>Departamento</label>
                    <select class="form-select input-sm" name="cboDepartamento" id="cboDepartamento"></select>
                </div>
                <div class="mb-2">
                    <label>Provincia</label>
                    <select class="form-select input-sm" name="cboProvincia" id="cboProvincia"></select>
                </div>
                <div class="mb-2">
                    <label>Distrito</label>
                    <select class="form-select input-sm" name="cboDistrito" id="cboDistrito"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!--Fin Modal-->

<script src="~/js/Views/Trabajador.js"></script>

